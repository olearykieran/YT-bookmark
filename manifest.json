{
    "manifest_version": 3,
    "name": "Video Bookmark",
    "description": "Bookmarks your place in YouTube videos",
    "version": "1.1",
    "permissions": ["storage", "activeTab", "identity"],
    "host_permissions": ["*://www.youtube.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["./dist/content.js"]
      }
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }